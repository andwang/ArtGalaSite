<script type="text/javascript">
     $  (function() {
           $('#screens').orbit({
                animation: 'fade',
                animationSpeed: 2000,
                advanceSpeed: 6000, 
                captions: true, 	
                captionAnimation: 'fade', 
                captionAnimationSpeed: 2000
           });
    
         $('#buybutton').click(function(){
              if($(this).data("qtip")) $(this).qtip("destroy");
       
              $(this).qtip({
                   content: '<div style="width:200px;height:170px;color:#fff;font-size:20px">' +
                               '<div class="ipad_link"><a target="_blank" href="http://itunes.apple.com/us/app/art-gala/id539349832">iPad</a></div>' +
                               '<div class="kindle_fire_link"> <a target="_blank" href="http://www.amazon.com/GonePixel-Art-Gala-Classical-Masterpieces/dp/B007JYKPIW/ref=sr_1_1?s=mobile-apps&ie=UTF8&qid=1334461628&sr=1-1">Kindle Fire</a></div>' +
                               '<div class="nook_link"> <a target="_blank" href="http://www.barnesandnoble.com/w/art-gala-gonepixel/1110915494"> Nook Tablet</a></div>' +
                               '<div class="android_link"> <a target="_blank" href="https://play.google.com/store/apps/details?id=com.art&feature=search_result#?t=W251bGwsMSwyLDEsImNvbS5hcnQiXQ.."> Android Tablet</a></div>' +
                            '</div>',
                   position: {
                      corner: {
                        tooltip:'bottomMiddle',
                        target:'topMiddle'
                      }
                   },
                   show: {
                      when: false, // Don't specify a show event
                      ready: true // Show the tooltip when ready
                   },
                   hide: {
                      fixed: true
                   },
                   style: {
                       border: {
                            width: 2,
                            radius: 10,
                            color: 'rgba(0,0,0,0.8)'
                       },
                       padding: 10, 
                       tip: true,
                       background: 'rgba(0,0,0,0.6)'
                   }
              });
         });
     });
</script>
